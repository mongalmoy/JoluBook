<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" dir="ltr">
    <title>JoluBook</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>

    <div class="register-page">
        <div class="row">
            <div class="col-6">
                <div class="left-div">
                    <div class='logo'>
                        <img src="/images/Logo_of_JGEC.jpg" />
                    </div>
                    <div class='name'>
                        <p>JOIN US</p>
                    </div>
                    <div class='welcome'>
                        <p>Welcome to Jolu Book !</p>
                    </div>
                    <div class='about-us'>
                        <a href="#" target="_blank">About Us</a>
                    </div>
                </div>
            </div>

            <div class="col-6">
                <div class="right-div">
                    <div class="form-div">
                        <form method="POST" action="/register">
                            <div class="register-form">
                                <div class='heading-div'>
                                    <h1>Register Here</h1>
                                </div>
                                <div class='input-name'>
                                    <input type='text' placeholder='Name' name="name" required />
                                </div>
                                <div class='input-year'>
                                    <select id="year" name="year" required>
                                        <option value="">Batch</option>
                                        <%for(let k=1961;k<new Date().getFullYear()+1;k++){%>
                                            <option value="<%=k+4%>"><%=k%>-<%=k+4%></option>
                                        <%}%>
                                    </select>

                                    <select class='input-department' name="department" id="department" required>
                                        <option value=''>----Select One-----</option>
                                        <option value="ME">Mechanical Engineering</option>
                                        <option value="CE">Civil Engineering</option>
                                        <option value="CSE">Computer Science Engineering</option>
                                        <option value="IT">Information Technology</option>
                                        <option value="ECE">Electronics and Communication Engineering</option>
                                        <option value="EE">Electrical Engineering</option>
                                    </select>
                                </div>
                                <div class="current-position">
                                    <input placeholder='Current Position' type="text" name="currorg" required />
                                </div>
                                <div class='input-email' style="display: flex;">
                                    <input placeholder='Email' type="email" name="username" required />
                                    <span id="registerPageVerifyButton" onclick="otpPopup()">Verify</span>
                                    <div class="verified">
                                        <svg style="fill: green; margin-left: 10px;" xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                                        </svg>
                                        <span>verified</span>
                                    </div>
                                </div>
                                <div class="confirm-otp">
                                    <input type="text" placeholder="Enter OTP" name="otp" >
                                </div>
                                <div class='input-password'>
                                    <input placeholder='Password' type="password" name="password" required />
                                </div>
                                <div class='register-button'>
                                    <button type='submit'>Register</button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="convert-div" >
                        <p>Already have an account? <span><a href="/login">Log in</a></span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>


<script>
    function otpPopup() {
        let otpValue = prompt("Enter the OTP value");
    }
</script>


</html>