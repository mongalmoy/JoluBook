                            <p onclick="document.getElementById('AccPageInputProfile').click()">Upload photo</p>
                            <p>Remove photo</p>
                        </div>
                    </div>
                    <div class="name" onclick="removeAccPageRemoveUploadButton()">
                        <h4>Mongalmoy Karmakar</h4>
                    </div>
                </div>
            </div>

