<div class="account-page" id="accountpage">

    <div class="account-page-section">
        <div class="account-page-edit-container"  style="height: 565px; border-radius: 5px; padding: 10px 30px 20px; position: relative;">

            <!-- Edit Icon -->
            <a class="accountpage-edit-link" href="/editaccount"><i class="fas fa-pencil-alt"></i></a>

            <div class="account-page-name-img">
                <div style="display: flex; align-items: center; padding: 10px 0; position: relative;">
                    <div class="img">
