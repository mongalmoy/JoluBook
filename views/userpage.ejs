          <div class="userpage__userdetails">
            <i class="fab fa-linkedin"></i>
            <p>Linkedin</p>
          </div>
          <div class="userpage__userdetails">
            <i class="fab fa-github"></i>
            <p>Github</p>
          </div>
          <div class="userpage__userdetails">
            <i class="fab fa-instagram"></i>
            <p>Instagram</p>
          </div>
          <div class="userpage__userdetails">
            <i class="fab fa-facebook-square"></i>
            <p>Facebook</p>
          </div>

        </div>

        <div class="userpage-feed-container">
          <div class="userpage-chatbox">

